<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="200dp"
    android:layout_marginBottom="8dp"
    android:id="@+id/membersshipExpandableLayout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >



        <androidx.cardview.widget.CardView
            android:id="@+id/membersshipcardlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="16dp"
            app:cardElevation="40dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/babyblue"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/membersshipbannerImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"

                    android:scaleType="fitXY"
                    android:src="@drawable/gym"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                  />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"

                    >

                    <TextView
                        android:id="@+id/membersshipintresetedtxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"

                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/kanitlight"
                        android:text="700 interested"
                        android:textColor="@color/black"
                        android:textSize="12dp"

                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/membersshipeventtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kanitlight"
                    android:text="Event Title"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/membersshipbannerImage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.048"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/membersshipbannerImage"
                    app:layout_constraintVertical_bias="0.089" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>




    </LinearLayout>



</RelativeLayout>


