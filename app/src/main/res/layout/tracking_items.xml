<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"

   >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/trackingitem1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="1dp"
            app:cardCornerRadius="22dp"
             >


            <RelativeLayout
                android:id="@+id/temp1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <ImageButton
                        android:id="@+id/trackingitem1image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="16dp"
                        android:layout_gravity="center"
                        android:background="@drawable/cricket" />

                    <TextView
                        android:id="@+id/trackingitem1title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/kanitlight"
                        android:text="TextView"
                        android:textStyle="bold"
/>

                </LinearLayout>



            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/trackingitem2"
            android:layout_width="90dp"
            android:layout_height="90dp"

            android:layout_marginTop="16dp"
            app:cardCornerRadius="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/trackingitem1" >

            <RelativeLayout
                android:id="@+id/temp2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <ImageButton
                    android:id="@+id/tracking2image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/dance"/>

                <TextView
                    android:id="@+id/trackingitem2title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kanitlight"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:text="TextView"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tracking2image" />
            </LinearLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>



    </LinearLayout>



</RelativeLayout>